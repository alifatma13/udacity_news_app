<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="@dimen/list_item_image_height"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingEnd="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingStart="16dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <!-- Section of the news-->
            <TextView
                android:id="@+id/news_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/textColorNewsDetails"
                android:textSize="12sp"
                tools:text="sectionId" />
            <!-- Title of the news-->
            <TextView
                android:id="@+id/news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="true"
                android:textColor="@color/textColorNewsDetails"
                android:textSize="16sp"
                tools:text="News Title" />


            <LinearLayout
                android:id="@+id/date_author_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <!-- Published date of the news-->
                <TextView
                    android:id="@+id/news_publishedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorNewsDetails"
                    android:textSize="12sp"
                    tools:text="Published At"
                    android:layout_marginRight="10dp"/>
                <!-- Author of the news-->
                <TextView
                    android:id="@+id/news_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorNewsDetails"
                    android:textSize="12sp"
                    tools:text="Author name" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>